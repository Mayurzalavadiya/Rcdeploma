<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RCDiplomaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="semibold_24" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/josefinsans_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="semibold_16" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/josefinsans_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edittext_semibold_16" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="fontFamily">@font/josefinsans_semibold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="button_semibold_20" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/josefinsans_semibold</item>
        <item name="android:textSize">20dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.RCDiplomaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RCDiplomaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RCDiplomaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/teal_700</item>
    </style>

    <style name="PayUMoney" parent="PayumoneyAppTheme">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
        <item name="colorButtonNormal">@android:color/holo_orange_dark</item>
        <item name="alertDialogTheme">@style/AlertDialogStylePayUMoney</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AlertDialogStylePayUMoney" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/payumoney_text_color</item>
    </style>

</resources>