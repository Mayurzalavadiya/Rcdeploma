<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    android:orientation="vertical"
    tools:context=".JsonSignupActivity">

    <EditText
        android:id="@+id/json_signup_name"
        style="@style/edittext_semibold_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border"
        android:hint="Enter Name"
        android:padding="10dp" />

    <EditText
        android:id="@+id/json_signup_email"
        style="@style/edittext_semibold_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/json_signup_contact"
        style="@style/edittext_semibold_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border"
        android:hint="Enter Contact No."
        android:inputType="number"
        android:maxLength="10"
        android:padding="10dp" />

    <EditText
        android:id="@+id/json_signup_password"
        style="@style/edittext_semibold_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/json_signup_confirm_password"
        style="@style/edittext_semibold_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border"
        android:hint="Enter Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        style="@style/semibold_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:text="Gender" />

    <RadioGroup
        android:id="@+id/json_signup_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/json_signup_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male" />

        <RadioButton
            android:id="@+id/json_signup_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Female" />

        <RadioButton
            android:id="@+id/json_signup_transgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transgender" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            style="@style/semibold_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="City" />

        <Spinner
            android:id="@+id/json_signup_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/json_signup_submit"
        android:layout_marginTop="20dp"
        style="@style/button_semibold_20"
        android:text="Submit"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

</LinearLayout>